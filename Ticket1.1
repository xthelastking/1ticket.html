<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Metro Transit Ticket</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet"> <!-- Slimmer font -->
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
            color: #333333;
        }
        .ticket-container {
            width: 100%;
            max-width: 400px;
            padding: 15px;
        }
        .ticket {
            background: white;
            padding: 20px;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        .header {
            font-size: 18px;
            font-weight: bold;
            text-align: left;
            margin-top: 10px;
            margin-bottom: 5px; /* 5px margin between the header and subtext */
        }
        .subtext {
            font-size: 14px;
            color: #555;
            text-align: left;
            margin-top: 5px; /* 5px margin-top to create space between the two lines */
            margin-bottom: 15px;
        }

        .logo-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 20px 0;
        }
        .circle {
            width: 160px;  /* Increased circle size */
            height: 160px; /* Increased circle size */
            border-radius: 50%;
            border: 36px solid #004F9F; /* 15% thicker circle */
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
        }
        .circle img {
            width: 35%;
            height: 35%;
            object-fit: contain;
        }
        .time {
            font-family: 'Roboto', sans-serif; /* Changed to a slimmer font */
            font-size: 60px; /* Increased font size */
            font-weight: bold; /* Now making the time bold */
            margin: 30px 0 10px; /* Increased top margin to move the time down */
        }
        
        /* Wrap all text under the circle into a single block */
        .text-block {
            background-color: white; /* White background for the text block */
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
            box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow around the text */
            text-align: left;
            color: #333;
        }

        .fare-text {
            font-size: 20px;
            font-weight: normal;  /* Removed bold styling */
            margin-bottom: 10px;
        }

        .location-text {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .expires {
            font-size: 16px;
            margin-top: 20px; /* Move expiration time down a line */
            font-weight: bold; /* Make the expiration date bold */
        }

        /* Responsive Design for smaller screens */
        @media (max-width: 414px) {
            .ticket-container {
                width: 90%;
            }
            .header {
                font-size: 16px;
            }
            .subtext {
                font-size: 12px;
            }
            .time {
                font-size: 30px; /* Adjusted font size for smaller screens */
            }
            .details p {
                font-size: 14px;
            }
            .expires {
                font-size: 14px;
            }
            .fare-text {
                font-size: 18px;
            }
            .location-text {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="ticket-container">
        <div class="ticket">
            <div class="header">Metro Transit</div> <!-- "Metro Transit" moved closer -->
            <div class="subtext">Show operator your ticket</div>
            
            <div class="logo-container">
                <div class="circle">
                    <img src="https://i.imgur.com/Sv2XEEm_d.webp?maxwidth=760&fidelity=grand" alt="Metro Transit Logo">
                </div>
            </div>
            
            <div class="time" id="clock">Loading...</div>
            
            <!-- Group all text under one container -->
            <div class="text-block">
                <div class="fare-text">Adult / Rush Hour Fare</div>
                <div class="location-text">Minneapolis/St Paul Metro Area</div>
                <div class="expires" id="expires">Expires: Loading...</div>
            </div>
        </div>
    </div>

    <script>
        function updateClock() {
            const now = new Date();

            // Format current time
            let hours = now.getHours();
            let minutes = now.getMinutes();
            let seconds = now.getSeconds();
            const amPm = hours >= 12 ? 'PM' : 'AM';

            hours = hours % 12 || 12; // Convert to 12-hour format
            minutes = minutes < 10 ? '0' + minutes : minutes;
            seconds = seconds < 10 ? '0' + seconds : seconds;
            
            const formattedTime = `${hours}:${minutes}:${seconds} ${amPm}`;
            document.getElementById('clock').textContent = formattedTime;
        }

        // Expiration time calculated only when the page is loaded or refreshed
        function setExpirationTime() {
            const now = new Date();
            const expirationTime = new Date(now.getTime() + 2.5 * 60 * 60 * 1000); // 2.5 hours later

            let expHours = expirationTime.getHours();
            let expMinutes = expirationTime.getMinutes();
            const expAmPm = expHours >= 12 ? 'PM' : 'AM';

            expHours = expHours % 12 || 12;
            expMinutes = expMinutes < 10 ? '0' + expMinutes : expMinutes;

            const formattedExpTime = `${expHours}:${expMinutes} ${expAmPm}`;
            const formattedExpDate = expirationTime.toLocaleDateString('en-US', {
                month: 'short', day: 'numeric', year: 'numeric'
            });

            document.getElementById('expires').textContent = `Expires: ${formattedExpDate}, ${formattedExpTime}`;
        }

        setInterval(updateClock, 1000);  // Update the clock every second
        setExpirationTime();  // Set the expiration time once on load or refresh
    </script>
</body>
</html>
